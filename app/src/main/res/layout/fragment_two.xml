<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mvp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="onClick"
            android:gravity="center"
            android:padding="20dp">
            <TextView
                android:id="@+id/t_mvp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="MVP 框架"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/alpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="onClick"
            android:gravity="center"
            android:padding="20dp">
            <TextView
                android:id="@+id/t_alpha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="alpha 动画"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/alpha_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="20dp">
            <TextView
                android:id="@+id/t_alpha_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="alpha 新动画"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/filp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="20dp">
            <TextView
                android:id="@+id/t_filp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="filp 新动画"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/filp_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="filp_vertical 新动画"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/diappear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="diappear 新动画"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
